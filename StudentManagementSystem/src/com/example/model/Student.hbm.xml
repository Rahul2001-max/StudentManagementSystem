<!DOCTYPE hibernate-mapping PUBLIC  
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.example.model.StudentBean" table="stud">
        <id name="id" column="id">
            <generator class="identity"/>  
        </id>
        <property name="name" column="sname" type="string"/>
        <property name="age" column="sage" type="int"/>
        <property name="email" column="semail" type="string"/>       
        <property name="branch" column="sbranch" type="string"/>
    </class>
</hibernate-mapping>